{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "aegis/hero",
  "title": "Aegis Hero",
  "category": "media",
  "icon": "slides",
  "description": "Hero carousel supporting images, local videos, and lazy external videos.",
  "editorScript": "aegis-hero-editor",
  "style": "aegis-hero-style",
  "editorStyle": [
    "aegis-hero-style",
    "file:./editor.css"
  ],
  "viewScript": "aegis-hero-view",
  "supports": {
    "anchor": true,
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "slides": {
      "type": "array",
      "default": []
    },
    "heightDesktop": {
      "type": "number",
      "default": 520
    },
    "heightMobile": {
      "type": "number",
      "default": 320
    },
    "heightVhDesktop": {
      "type": "number",
      "default": 70
    },
    "heightVhMobile": {
      "type": "number",
      "default": 60
    },
    "heightMode": {
      "type": "string",
      "default": "fixed"
    },
    "subtractHeader": {
      "type": "boolean",
      "default": false
    },
    "headerOffsetPx": {
      "type": "number",
      "default": 0
    },
    "showArrows": {
      "type": "boolean",
      "default": true
    },
    "showDots": {
      "type": "boolean",
      "default": true
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "intervalMs": {
      "type": "number",
      "default": 6000
    },
    "hidePageTitleHint": {
      "type": "boolean",
      "default": false
    },
    "align": {
      "type": "string"
    },
    "promoEnabled": {
      "type": "boolean",
      "default": true
    },
    "promoAnchor": {
      "type": "string",
      "default": "center"
    },
    "promoOffsetX": {
      "type": "number",
      "default": 0
    },
    "promoOffsetY": {
      "type": "number",
      "default": 0
    },
    "promoUseSameOnMobile": {
      "type": "boolean",
      "default": true
    },
    "promoOffsetXMobile": {
      "type": "number",
      "default": 0
    },
    "promoOffsetYMobile": {
      "type": "number",
      "default": 0
    },
    "promoMaxWidth": {
      "type": "number",
      "default": 720
    }
  }
}
